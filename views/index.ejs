<!DOCTYPE html>
<html>
<head>
  <title>Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-5xl mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-center">Movie Library</h1>
    <% for (let category in categories) { %>
      <h2 class="text-2xl font-semibold mt-6 mb-2"><%= category %></h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
        <% categories[category].forEach(movie => { %>
          <div class="bg-white rounded shadow p-4">
            <img src="<%= movie.thumbnail %>" alt="thumb" class="w-full h-48 object-cover mb-2 rounded">
            <h3 class="text-lg font-bold"><%= movie.title %></h3>
            <a href="<%= movie.link %>" target="_blank" class="text-blue-500 hover:underline">Download</a>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>